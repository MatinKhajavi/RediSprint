# Redis Configuration
REDIS_URL=redis://localhost:6379

# OpenAI API Key
OPENAI_API_KEY=sk-...

# OpenAI Model Configuration (optional - defaults provided)
OPENAI_COMPLETION_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google Sheets Configuration
GOOGLE_SHEET_ID=your-google-sheet-id-here
GOOGLE_SHEET_RANGE=Sheet1!A1:J1000

# Composio Configuration
COMPOSIO_API_KEY=your_composio_api_key_here
COMPOSIO_USER_ID=your-uuid-here

# Jira Configuration
JIRA_PROJECT_KEY=SPRINT
JIRA_COMPONENT_DEFAULT=Backend

# Data Ingestion Configuration (for ingest_code_and_tickets.py)
# Path to your codebase for ingestion
CODE_DIR=/path/to/your/codebase

# Repository name (defaults to directory name if not specified)
REPO_NAME=your-repo-name

# Path to Jira CSV export (optional - if not set, will use Composio API)
TICKETS_CSV=Jira.csv

# Sprint name for ticket ingestion
SPRINT_NAME=Sprint 1

# Jira JQL query for fetching tickets via API (if not using CSV)
TICKETS_JQL=project = YOUR_PROJECT ORDER BY created DESC

